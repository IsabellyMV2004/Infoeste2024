generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String
  password String
  name     String
  notes    Note[]
}

model Note {
  id       String   @id @default(cuid())
  title    String
  content  String
  checked  Boolean  @default(false)
  priority Priority
  authorId String
  author   User     @relation(fields: [authorId], references: [id])
}

enum Priority {
  LOW
  MEDIUM
  HIgh
}
